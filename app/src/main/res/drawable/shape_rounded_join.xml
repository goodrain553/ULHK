<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Red Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Red color for the border -->
            <corners android:radius="30dp"/> <!-- Adjust radius for roundness -->
        </shape>
    </item>

    <!-- Inner White Background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White color for the background -->
            <corners android:radius="30dp"/> <!-- Slightly less than outer radius -->
        </shape>
    </item>
</layer-list>
